<p id="notice"><%= notice %></p>
<h1>Birthdays</h1>

<%= form_tag(buscar_path) do  %>
  <%= text_field_tag "search", nil, placeholder: "Buscador" %>
<%= submit_tag "Enviar" %>

<% end %>



<table>
  <thead>
    <tr>
      <th>B day</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @birthdays.each do |birthday| %>
      <tr>
        <td><%= birthday.b_day %></td>
        <td><%= birthday.name %></td>
        <td><%= link_to 'Show', birthday %></td>
        <td><%= link_to 'Edit', edit_birthday_path(birthday) %></td>
        <td><%= link_to 'Destroy', birthday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Birthday', new_birthday_path %>

<div id="calendar"></div>
